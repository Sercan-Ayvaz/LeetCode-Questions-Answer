/*
 ----Two Sum----
 Given an array of integers nums and an integer target, return indices of the two numbers such that they add up to target.

You may assume that each input would have exactly one solution, and you may not use the same element twice.

You can return the answer in any order.

Example 1:
    Input: nums = [2,7,11,15], target = 9
    Output: [0,1]
    Explanation: Because nums[0] + nums[1] == 9, we return [0, 1].

Example 2:
    Input: nums = [3,2,4], target = 6
    Output: [1,2]

Example 3:
    Input: nums = [3,3], target = 6
    Output: [0,1]
 */

public class Solution {
    public static int[] TwoSum(int[] nums, int target) 
    {
      int[] outputNums = { };
      int outputSum = 0;
      for (int itemX = 0; itemX < nums.Length; itemX++)
      {
          for (int itemY = itemX; itemY < nums.Length; itemY++)
          {
              outputSum = nums[itemX] + nums[itemY];
              if (outputSum == target && itemX != itemY)
              {
                  outputNums = [itemX, itemY];
              }
          }
      }
      return outputNums;
    }
    public static void Main()
    {
        int[] nums = { 2, 7, 11, 15 };
        int target = 9;
        int[] numsTwo = { 3,2,4 };
        int targetTwo = 6;
        int[] numsThree = { 3,3 };
        int targetThree = 6;
        EkranaYazdir(TwoSum(nums, target));
        EkranaYazdir(TwoSum(numsTwo, targetTwo));
        EkranaYazdir(TwoSum(numsThree, targetThree));
    }
    public static void EkranaYazdir(int[] outputNums) 
    {
        int[] output = outputNums;
        foreach (var item in output)
        {
            Console.Write(item + " ");
        }
        Console.WriteLine();
    }
}
    
